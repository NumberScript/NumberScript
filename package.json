{
  "name": "numberscript",
  "displayName": "NumberScript",
  "description": "A symbolic math language for VS Code Web with simplify, expand, solve, and graph support.",
  "version": "1.1.21",
  "publisher": "NumberScript",
  "engines": {
    "vscode": "^1.87.0"
  },
  "categories": [
    "Programming Languages",
    "Education",
    "Visualization"
  ],
  "icon": "resources/icon.png",
  "repository": {
    "type": "git",
    "url": "https://github.com/numberscript/numberscript"
  },
  "bugs": {
    "url": "https://github.com/numberscript/numberscript/issues"
  },
  "homepage": "https://github.com/numberscript/numberscript",
  "keywords": [
    "math",
    "algebra",
    "symbolic",
    "solve",
    "graphing",
    "education",
    "numberscript"
  ],
  "activationEvents": [
    "onLanguage:numberscript",
    "onCommand:numberscript.run"
  ],
  "contributes": {
    "languages": [
      {
        "id": "numberscript",
        "aliases": ["NumberScript", "numberscript"],
        "extensions": [".ns"],
        "configuration": "./language-configuration.json"
      }
    ],
    "grammars": [
      {
        "language": "numberscript",
        "scopeName": "source.numberscript",
        "path": "./numberscript.tmLanguage.json"
      }
    ],
    "commands": [
      {
        "command": "numberscript.run",
        "title": "Run NumberScript"
      }
    ],
    "viewsContainers": {
      "activitybar": [
        {
          "id": "numberscript",
          "title": "NumberScript",
          "icon": "resources/icon.png"
        }
      ]
    },
    "views": {
      "numberscript": [
        {
          "id": "numberscriptShowWork",
          "name": "Show Work"
        }
      ]
    }
  },
  "main": "./dist/extension.client.js",
  "scripts": {
    "prebuild": "git add . && git commit -m 'Auto-commit uncommitted changes [skip ci]' || echo 'No changes to commit'",
    "build": "webpack --mode=production --config webpack.config.js",
    "dev": "webpack --mode=development --watch --config webpack.config.js",
    "lint": "eslint src --ext .ts",
    "compile": "npm run build",
    "package": "npm run prebuild && npm version patch -m 'CI: Bump version to %s [skip ci]' && npx @vscode/vsce package"
  },
  "devDependencies": {
    "@types/node": "^20.0.0",
    "@types/vscode": "^1.87.0",
    "ts-loader": "^9.5.0",
    "typescript": "^5.0.0",
    "webpack": "^5.101.3",
    "webpack-cli": "^5.0.0",
    "copy-webpack-plugin": "^11.0.0",
    "worker-loader": "^3.0.8",
    "nearley-loader": "^2.0.0",
    "style-loader": "^3.3.2",
    "css-loader": "^6.8.1",
    "raw-loader": "^4.0.2"
  },
  "dependencies": {
    "mathjs": "^11.8.0",
    "nerdamer": "^1.1.13",
    "mathsteps": "^0.2.0",
    "nearley": "^2.20.1"
  }
}
