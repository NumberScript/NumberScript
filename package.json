{
  "name": "numberscript",
  "displayName": "NumberScript",
  "version": "1.0.0",
  "description": "NumberScript â€” symbolic math language extension for VS Code Web",
  "publisher": "NumberScript",
  "engines": { "vscode": "^1.87.0" },
  "activationEvents": [
    "onLanguage:numberscript",
    "onCommand:numberscript.run",
    "onView:showWorkView"
  ],
  "main": "./dist/extension.client.js",
  "browser": "./dist/extension.client.js",
  "contributes": {
    "languages": [
      {
        "id": "numberscript",
        "aliases": ["NumberScript", "numberscript"],
        "extensions": [".ns"],
        "configuration": "./language-configuration.json"
      }
    ],
    "grammars": [
      {
        "language": "numberscript",
        "scopeName": "source.numberscript",
        "path": "./numberscript.tmLanguage.json"
      }
    ],
    "commands": [
      { "command": "numberscript.run", "title": "Run NumberScript" }
    ],
    "viewsContainers": {
      "activitybar": [
        { "id": "numberscriptSidebar", "title": "NumberScript", "icon": "resources/icon.svg" }
      ]
    },
    "views": {
      "numberscriptSidebar": [
        { "id": "showWorkView", "name": "Show Work" }
      ]
    }
  },
  "scripts": {
    "clean": "rm -rf dist .webpack cache || true",
    "build": "webpack --mode=production --config webpack.config.js",
    "dev": "webpack --mode=development --watch --config webpack.config.js",
    "lint": "eslint src --ext .ts",
    "package": "vsce package"
  },
  "dependencies": {
    "mathjs": "^11.8.0",
    "mathsteps": "^0.7.0",
    "nerdamer": "^1.1.13",
    "katex": "^0.16.4",
    "plotly.js-dist-min": "^2.16.1",
    "nearley": "^2.20.1"
  },
  "devDependencies": {
    "typescript": "^5.1.6",
    "ts-loader": "^9.4.2",
    "webpack": "^5.88.2",
    "webpack-cli": "^5.1.4",
    "nearley-loader": "^1.3.0",
    "css-loader": "^6.8.1",
    "raw-loader": "^4.0.2",
    "copy-webpack-plugin": "^11.0.0",
    "source-map-loader": "^4.0.1",
    "vsce": "^2.11.0"
  }
}
